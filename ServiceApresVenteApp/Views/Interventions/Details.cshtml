@model ServiceApresVente.Models.Intervention

@{
    ViewData["Title"] = "Intervention Details";
}

<h1 class="text-center">Intervention Details</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Intervention Information</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Technicien)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Technicien)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DateIntervention)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DateIntervention)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.EstSousGarantie)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.EstSousGarantie ? "Oui" : "Non")
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.CoutMainOeuvre)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CoutMainOeuvre)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.CoutTotal)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CoutTotal)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Reclamation)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Reclamation.Id)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Display the list of pieces used in the intervention -->
    @if (ViewBag.PieceDetails != null && ((List<(string PieceName, int Quantite, double PrixUnitaire, double PrixTotal)>)ViewBag.PieceDetails).Any())
    {
        <div class="mt-4">
            <h4>Pieces Utilisées</h4>
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Nom de la Pièce</th>
                        <th>Quantité</th>
                        <th>Prix Unitaire</th>
                        <th>Prix Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var piece in (List<(string PieceName, int Quantite, double PrixUnitaire, double PrixTotal)>)ViewBag.PieceDetails)
                    {
                        <tr>
                            <td>@piece.PieceName</td>
                            <td>@piece.Quantite</td>
                            <td>@piece.PrixUnitaire</td>
                            <td>@piece.PrixTotal</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>Aucune pièce utilisée pour cette intervention.</p>
    }

    <div class="mt-3 text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Modifier</a>
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
