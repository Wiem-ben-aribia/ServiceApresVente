@model ServiceApresVente.Models.Article

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete Product</h1>

<hr />
<h3 class="text-center text-danger">Are you sure you want to delete this Product?</h3>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Product Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Nom)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Nom)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Reference)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Reference)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DateAchat)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DateAchat)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DureeGarantie)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DureeGarantie)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.User)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.User.Id)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
