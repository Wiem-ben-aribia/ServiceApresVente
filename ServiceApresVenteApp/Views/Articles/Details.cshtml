@model ServiceApresVente.Models.Article

@{
    ViewData["Title"] = "Article Details";
}

<h1 class="text-center">Product Details</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Article Information</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Nom)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Nom)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Reference)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Reference)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DateAchat)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DateAchat)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DureeGarantie)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DureeGarantie)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.User)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.User.Id)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
