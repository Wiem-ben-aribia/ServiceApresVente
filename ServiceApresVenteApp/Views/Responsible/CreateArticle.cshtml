@model ServiceApresVente.Models.Article

@{
    ViewData["Title"] = "Create";
}

<h1>Créer un Nouvel Article</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateArticle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Nom -->
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" placeholder="Nom de l'article" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <!-- Référence -->
            <div class="form-group">
                <label asp-for="Reference" class="control-label"></label>
                <input asp-for="Reference" class="form-control" placeholder="Référence de l'article" />
                <span asp-validation-for="Reference" class="text-danger"></span>
            </div>

            <!-- Date d'achat -->
            <div class="form-group">
                <label asp-for="DateAchat" class="control-label"></label>
                <input asp-for="DateAchat" class="form-control" type="date" />
                <span asp-validation-for="DateAchat" class="text-danger"></span>
            </div>

            <!-- Durée de Garantie -->
            <div class="form-group">
                <label asp-for="DureeGarantie" class="control-label"></label>
                <input asp-for="DureeGarantie" class="form-control" placeholder="Durée de garantie (en mois)" />
                <span asp-validation-for="DureeGarantie" class="text-danger"></span>
            </div>

            <!-- Sélection de l'utilisateur -->
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
                    <option value="">Sélectionner un utilisateur</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- Bouton de soumission -->
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Retour à la liste
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <!-- Bootstrap Icons for Back Button -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}
