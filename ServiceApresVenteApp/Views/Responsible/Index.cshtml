@model IEnumerable<ServiceApresVente.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des Articles</h1>

<p>
    <a asp-action="CreateArticle" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Créer un Nouvel Article
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nom)</th>
            <th>@Html.DisplayNameFor(model => model.Reference)</th>
            <th>@Html.DisplayNameFor(model => model.DateAchat)</th>
            <th>@Html.DisplayNameFor(model => model.DureeGarantie)</th>
            <th>@Html.DisplayNameFor(model => model.User)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                <td>@Html.DisplayFor(modelItem => item.Reference)</td>
                <td>@item.DateAchat.ToString("dd MMM yyyy")</td> <!-- Format de la date -->
                <td>@Html.DisplayFor(modelItem => item.DureeGarantie)</td>
                <td>@Html.DisplayFor(modelItem => item.User.Id)</td> <!-- Affichage du nom de l'utilisateur -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Editer
                    </a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-info-circle"></i> Détails
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Supprimer
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <!-- Bootstrap Icons for Action Buttons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}
